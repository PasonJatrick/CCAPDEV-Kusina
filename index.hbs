      </div>
	 
      <!-- // Main Content -->

      <div class="sidebar">

        <div class="section topics">
          <h2 class="section-title"><i class="bi bi-tags"></i>Categories</h2>
          <ul>
            <li><a href="#" onclick="Categorize()">Lunch</a></li>
